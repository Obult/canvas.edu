// Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Access {
  DIRECT
  PRIVATE
  PROTECTED
  PUBLIC
}

enum Status {
  OFFLINE
  ONLINE
  INGAME
}

model User {
  // online or offline (bool or enum with ingame too)
  id        Int     @default(autoincrement()) @id
  intraId   Int     @unique
  name      String  @unique // prompt on startup
  status    Status  @default(OFFLINE)
  friends   Int[] // ids
  blocked   Int[] // ids
  elo       Int     @default(500)
  rooms     Room[]
  owns      Room[]  @relation("owns")
  sendMsg   Msg[]
  games     Game[]
}

model Room {
  id          Int @default(autoincrement()) @id
  owner       User? @relation("owns", fields: [ownerId], references: [id])
  ownerId     Int?
  users       User[]
  hashedCode  String?
  access      Access @default(PUBLIC)
  messages    Msg[]
  lastId      Int
}

model Msg {
  @@id([roomId, id])
  id        Int
  room      Room @relation(fields: [roomId], references: [id])
  roomId    Int
  body      String
  author    User @relation(fields: [authorId], references: [id])
  authorId  Int
  invite    Boolean @default(false) // ? how ? , maybe add a linkt to a game in the backend when we have to type of that available
}

model Game  {
  id        Int @default(autoincrement()) @id
  players   User[]
  score     Int[]
}
